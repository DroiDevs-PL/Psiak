<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dog_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="0dp"
    tools:ignore="ContentDescription">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardBackgroundColor="@color/colorPrimary"
        card_view:cardCornerRadius="@dimen/psiaki_dog_card_view_corner_radius"
        card_view:cardElevation="@dimen/psiaki_dog_card_view_elevation"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        style="@style/DogCardView">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/dog_card_view_iv_dog_image"
                app:srcCompat="@drawable/ic_doggy"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                style="@style/DogCardViewImage"/>

            <TextView
                android:id="@+id/dog_card_view_tv_dog_name"
                android:text="@string/dog_name"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/dog_card_view_iv_dog_image"
                card_view:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1"
                style="@style/DogCardViewTextDogName"/>

            <TextView
                android:id="@+id/dog_card_view_tv_dog_age"
                android:text="@string/dog_age_hint"
                card_view:layout_constraintStart_toEndOf="@+id/dog_card_view_tv_dog_name"
                card_view:layout_constraintTop_toTopOf="@+id/dog_card_view_tv_dog_name"
                style="@style/DogCardViewTextDogAge"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>