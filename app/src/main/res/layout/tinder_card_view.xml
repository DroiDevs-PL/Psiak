<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        tools:ignore="ContentDescription">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="74dp"
            android:layout_marginLeft="@dimen/psiak_spacing_small"
            android:layout_marginRight="@dimen/psiak_spacing_small"
            android:layout_marginTop="@dimen/psiak_spacing_small"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/psiak_spacing_small"
            android:gravity="center|start"
            android:orientation="vertical"
            android:paddingEnd="@dimen/psiak_spacing_medium"
            android:paddingStart="@dimen/psiak_spacing_medium">

            <TextView
                android:id="@+id/nameAgeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/psiak_text_size_small"
                android:textStyle="bold"
                android:fontFamily="serif"/>

            <TextView
                android:id="@+id/locationNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:textStyle="normal"
                android:fontFamily="serif"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>